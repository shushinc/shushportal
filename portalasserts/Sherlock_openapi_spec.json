  "components": {
    "schemas": {
      "api_key": {
        "type": "string",
        "description": "Apigee API key"
      },
      "carrier": {
        "type": "string",
        "description": "Carrier Name"
      },
      "endcustomer": {
        "type": "string",
        "description": "End Customer Name"
      },
      "check_simswap_request": {
        "type": "object",
        "description": "Check sim swap request body",
        "required": [
          "phoneNumber",
          "maxAge"
        ],
        "additionalProperties": false,
        "properties": {
          "phoneNumber": {
            "description": "phone number",
            "type": "string"
          },
          "maxAge": {
            "description": "maximum age of the SIM swap in hours",
            "type": "number"
          }
        }
      },
      "get_connectivity_status_request": {
        "type": "object",
        "description": "Get connectivity status request body",
        "required": [
          "phoneNumber",
          "networkAccessIdentifier",
          "ipv4Address",
          "ipv6Address"
        ],
        "additionalProperties": false,
        "properties": {
          "phoneNumber": {
            "description": "phone number",
            "type": "string"
          },
          "networkAccessIdentifier": {
            "description": "network address identifier",
            "type": "string"
          },
          "ipv4Address": {
            "$ref": "#/components/schemas/ipv4Address_obj"
          },
          "ipv6Address": {
            "description": "ipv6 network address identifier",
            "type": "string"
          }
        }
      },
      "ipv4Address_obj": {
        "type": "object",
        "description": "ipv4 address and port",
        "required": [
          "publicAddress",
          "publicPort"
        ],
        "additionalProperties": false,
        "properties": {
          "publicAddress": {
            "description": "ipv4 address",
            "type": "string"
          },
          "publicPort": {
            "description": "ipv4 port",
            "type": "number"
          }
        }
      },
      "check_roaming_status_request": {
        "type": "object",
        "description": "Check sim swap request body",
        "required": [
          "device"
        ],
        "additionalProperties": false,
        "properties": {
          "device": {
            "$ref": "#/components/schemas/get_connectivity_status_request"
          }
        }
      },
      "verify_phone_number_request": {
        "type": "object",
        "description": "Verify phone request body",
        "required": [
          "phoneNumber"
        ],
        "additionalProperties": false,
        "properties": {
          "phoneNumber": {
            "description": "phone number",
            "type": "string"
          }
        }
      },
      "verify_phone_number_response": {
        "type": "object",
        "description": "Verify phone response",
        "required": [
          "devicePhoneNumberVerified"
        ],
        "additionalProperties": false,
        "properties": {
          "devicePhoneNumberVerified": {
            "description": "device PhoneNumber Verification status",
            "type": "boolean"
          }
        }
      },
      "get_MSISDN_timestamp_request": {
        "type": "object",
        "description": "Get MSISDN timestamp request body",
        "required": [
          "phoneNumber"
        ],
        "additionalProperties": false,
        "properties": {
          "phoneNumber": {
            "description": "phone number",
            "type": "string"
          }
        }
      },
      "verify_device_location_request": {
        "type": "object",
        "description": "Verify device location request body",
        "required": [
          "device",
          "area",
          "maxAge"
        ],
        "additionalProperties": false,
        "properties": {
          "device": {
            "$ref": "#/components/schemas/phone_number"
          },
          "area": {
            "$ref": "#/components/schemas/area"
          },
          "maxAge": {
            "description": "maximum age of the SIM swap in hours",
            "type": "number"
          }
        }
      },
      "phone_number": {
        "type": "object",
        "description": "phone number",
        "required": [
          "phoneNumber"
        ],
        "additionalProperties": false,
        "properties": {
          "phoneNumber": {
            "description": "phone number",
            "type": "string"
          }
        }
      },
      "area": {
        "type": "object",
        "description": "area details",
        "required": [
          "areaType",
          "center",
          "radius"
        ],
        "additionalProperties": false,
        "properties": {
          "areaType": {
            "description": "area type",
            "type": "string"
          },
          "center": {
            "$ref": "#/components/schemas/center"
          },
          "radius": {
            "description": "area radius",
            "type": "number"
          }
        }
      },
      "center": {
        "type": "object",
        "description": "area latitude and longitude",
        "required": [
          "latitude",
          "longitude"
        ],
        "additionalProperties": false,
        "properties": {
          "latitude": {
            "description": "area latitude",
            "type": "number"
