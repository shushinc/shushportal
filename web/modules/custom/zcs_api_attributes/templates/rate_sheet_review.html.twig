{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}

<div class="rate-sheet-filter">
  <div class="rate-sheet-filter-currencies">
    <span class="attributes-label">Select Currency</span>
    <span class="attribute-inputs">{{ form.currencies }}</span>
  </div>
  <div class="rate-sheet-filter-effective">
    <span class="attributes-label">Effective Date of Proposed API Pricing</span>
    <span class="attribute-inputs">{{ form.attribute_date }}</span>
  </div>
</div>
<table class="attributes-table {% if active_theme() == 'violet' %}table table-bordered{% endif %}">
  <thead>
    <tr>
      <th>#</th>
      <th>API Attributes</th>
      <th>Current API Pricing</th>
      <th>Proposed API Pricing</th>
    </tr>
  </thead>
  <tbody>
    {% set counter = 1 %}
    {% set attributes = fetch_attributes() %}
    {% for id, title in attributes.titles %}
      <tr>
        <td>{{ counter }}</td>
        <td>{{ title }}</td>
        <td>
          {{ attributes.prices[id] }}
          {# {% if form['price' ~ id]|field_value != attributes.prices[id] %}
          {% endif %} #}
        </td>
        <td>{{ form['price' ~ id] }}</td>
      </tr>
      {% set counter = counter + 1 %}
    {% endfor %}
  </tbody>
</table>

{{ form.status }}

{{ form.approve }}
{{ form.reject }}
