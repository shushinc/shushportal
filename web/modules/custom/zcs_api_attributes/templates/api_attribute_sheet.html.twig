{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}

{% if form.message %}
	<p class="message">{{ form.message }}</p>
{% endif %}
<div>
	<span class="attribute-inputs">
		<table class="attributes-table">
			<thead>
				<tr>
					<th>#</th>
					<th>API Attributes</th>
					<th>Current Status</th>
					<th>Able to be used</th>
				</tr>
			</thead>
			<tbody>
				{% set counter = 1 %}
			    {% set attributes = fetch_attributes() %}
	             {% for id, title in attributes.titles %}
					<tr>
						<td>{{ counter }}</td>
						<td>{{ title }}</td>
						<td>{{ form['current_status' ~ id] }}</td>
						<td>{{ form['able_to_be_used' ~ id] }}</td>
					</tr>
				{% set counter = counter + 1 %}
				{% endfor %}
			</tbody>
		</table>
	</span>
</div>


{{ form.submit }}
