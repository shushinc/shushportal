
<table>
  <thead>
    <tr>
      <td>Submitted By</td>
      <td>Requested Time</td>
      <td>Approvers</td>
      <td>Status</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    {% if content|length > 0 %}
      {% for data in content %}
        <tr>
          <td>{{ data.submitted }}</td>
          <td>{{ data.requested_time }}</td>
          <td>{{ data.approver1 }} <span class="{{ data.approver1_status|lower }}">{{ data.approver1_status }}</span>
            <br> {{ data.approver2 }} <span class="{{ data.approver2_status|lower }}">{{ data.approver2_status }}</span>
          </td>
          <td class="{{ data.status|lower }}">{{ data.status }}</td>
          <td><a href="{{ data.url }}" class="btn-primary use-ajax anchor-dropdown-btn" data-toggle='modal' data-dialog-type='modal'  data-dialog-options='{"width": 800, "title": "Review"}'>Review</a></td>
        </tr>
      {% endfor %}
    {% else %}
      <tr><td colspan=6>There are no approvals</td></tr>
    {% endif %}
  </tbody>
</table>