<?php

/**
 * @file
 * Contains metalite.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function metalite_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.metalite':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Metalite module provides integration with the Metalite API to display dashboards.') . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Configuration') . '</dt>';
      $output .= '<dd>' . t('Configure the Metalite API settings at <a href=":settings">Metalite settings</a>.', [':settings' => '/admin/config/services/metalite']) . '</dd>';
      $output .= '<dt>' . t('Viewing dashboards') . '</dt>';
      $output .= '<dd>' . t('Access dashboards at <em>/metalite/dashboard/{dashboard_id}</em>.') . '</dd>';
      $output .= '</dl>';
      return $output;

    case 'metalite.settings':
      return '<p>' . t('Configure the Metalite API integration settings.') . '</p>';
  }
}
